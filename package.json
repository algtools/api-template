{
	"name": "api-template",
	"description": "Complete backend API template using Hono + Chanfana + D1 + Vitest.",
	"cloudflare": {
		"label": "Backend OpenAPI Template",
		"products": [
			"Workers",
			"D1"
		],
		"categories": [
			"storage"
		],
		"docs_url": "https://chanfana.com",
		"preview_icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/1b2805d9-e7fb-4576-5176-6b409e251800/public",
		"preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/cbde46cf-20fa-4548-7f70-1ae8c2f48900/preview",
		"publish": true
	},
	"dependencies": {
		"chanfana": "2.8.3",
		"hono": "4.10.7",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@cloudflare/vitest-pool-workers": "0.10.11",
		"@eslint/js": "9.18.0",
		"@types/node": "24.10.1",
		"@vitest/coverage-istanbul": "3.2.4",
		"eslint": "9.18.0",
		"eslint-config-prettier": "10.0.1",
		"globals": "15.14.0",
		"husky": "9.1.7",
		"prettier": "3.4.2",
		"typescript-eslint": "8.49.0",
		"typescript": "5.9.3",
		"vitest": "3.2.4",
		"wrangler": "4.51.0"
	},
	"private": true,
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"cf-typegen": "wrangler types",
		"deploy": "wrangler deploy",
		"dev": "pnpm run seedLocalDb && wrangler dev",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"prepare": "husky",
		"schema": "pnpm exec chanfana",
		"seedLocalDb": "wrangler d1 migrations apply DB --local",
		"test": "wrangler deploy --dry-run && pnpm run vitest:run",
		"type-check": "tsc -p tsconfig.json && tsc -p tests/tsconfig.json",
		"vitest": "vitest --config tests/vitest.config.mts",
		"vitest:run": "vitest run --config tests/vitest.config.mts",
		"vitest:coverage": "vitest run --config tests/vitest.config.mts --coverage"
	}
}
